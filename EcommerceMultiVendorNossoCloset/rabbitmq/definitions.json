    },
    {
      "name": "notification.queue",
      "vhost": "/",
      "durable": true,
      "auto_delete": false,
      "arguments": {
        "x-message-ttl": 300000
      }
    },
    {
      "name": "image.processing.queue",
      "vhost": "/",
      "durable": true,
      "auto_delete": false,
      "arguments": {
        "x-dead-letter-exchange": "dlx.exchange",
        "x-dead-letter-routing-key": "dlx.image.processing"
      }
    },
    {
      "name": "dlx.queue",
      "vhost": "/",
      "durable": true,
      "auto_delete": false,
      "arguments": {}
    }
  ],
  "bindings": [
    {
      "source": "order.exchange",
      "vhost": "/",
      "destination": "custom.order.queue",
