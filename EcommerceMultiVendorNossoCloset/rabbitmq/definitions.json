      "vhost": "/",
      "destination": "notification.queue",
      "destination_type": "queue",
      "routing_key": "notification.*",
      "arguments": {}
    },
    {
      "source": "image.processing.exchange",
      "vhost": "/",
      "destination": "image.processing.queue",
      "destination_type": "queue",
      "routing_key": "image.processing.*",
      "arguments": {}
